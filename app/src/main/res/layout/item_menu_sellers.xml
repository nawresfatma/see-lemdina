<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemSeller">
    <ImageView
        android:id="@+id/StoreImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/reccc" />


    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/roundRectView2"
        android:layout_width="255dp"
        android:layout_height="120dp"
        android:layout_marginTop="5dp"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="@+id/StoreImage"
        app:layout_constraintStart_toStartOf="@+id/StoreImage"

        app:layout_constraintTop_toTopOf="parent"
        app:shape_roundRect_borderColor="@android:color/white"
        app:shape_roundRect_borderWidth="2dp"
        app:shape_roundRect_bottomLeftRadius="1dp"
        app:shape_roundRect_bottomRightRadius="1dp"
        app:shape_roundRect_topLeftRadius="10dp"
        app:shape_roundRect_topRightRadius="10dp">


        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/rajell"
            app:layout_constraintEnd_toEndOf="@+id/StoreImage"
            app:layout_constraintStart_toStartOf="@+id/StoreImage"
            app:layout_constraintTop_toTopOf="@+id/StoreImage" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/shadow" />



    </com.github.florent37.shapeofview.shapes.RoundRectView>

    <TextView
        android:id="@+id/shopname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:text="Shop Name"
        android:textColor="@color/black"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/StoreImage"
        app:layout_constraintTop_toBottomOf="@+id/roundRectView2"
        app:layout_constraintVertical_bias="0.135" />

    <TextView
        android:id="@+id/shopDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/StoreImage"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="@+id/StoreImage"
        app:layout_constraintTop_toBottomOf="@+id/shopname" />

</androidx.constraintlayout.widget.ConstraintLayout>