<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" />
    <style name="no_title" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="RatingBar"  parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">#FFC300</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="android:statusBarColor">#000</item>
    </style>
    <style name="NavigationMapRoute">
        <!-- Colors -->
        <item name="routeColor">@color/mapboxBlue</item>
        <item name="routeModerateCongestionColor">@color/mapboxYellow</item>
        <item name="routeSevereCongestionColor">@color/mapboxPink</item>
        <!-- Scales -->
        <item name="routeScale">1.0</item>
    </style>
    <style name="NavigationTheme">
        <item name="android:textSize">40dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>
